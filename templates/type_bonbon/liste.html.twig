{% extends 'base.html.twig' %}

{% block title %}Liste des TypeBonbons{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Liste des types de bonbons</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Désignation</th>
            </tr>
        </thead>
        <tbody>
            {% for bonbon in bonbons | sort((a, b) => a.designation <=> b.designation)%}
                <tr>
                    <td>{{ bonbon.designation }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="1">Aucun bonbon trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
